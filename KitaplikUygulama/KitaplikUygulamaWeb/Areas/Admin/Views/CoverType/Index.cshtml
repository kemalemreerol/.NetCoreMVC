@model IEnumerable<CoverType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" areasp-controller="Category" asp-action="Create" class="btn btn-danger"><i class="bi bi-plus-circle"></i> Creat a New Category</a>
        </div>
    </div>
</div>


<table class="table table-border table-striped table-primary">
    <thead>
        <tr>
            <th>
                CoverType Name
            </th>
            <th>
                 
            </th>
            @*<th>
                
            </th>*@
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-area="Admin" asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-area="Admin" asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>



                </td>
            </tr>
        }
    </tbody>
</table>
