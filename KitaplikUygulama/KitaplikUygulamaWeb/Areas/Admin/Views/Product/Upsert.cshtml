@model KitaplikUygulama.Models.ViewModels.ProductVM



<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<div class="row">
			<h2> @(Model.Product.Id !=0 ? "Update":"Create") Product</h2>
			<hr />
		</div>
		
		<div class="mb-3">
			<label asp-for="Product.Title">Title</label>
			<input asp-for="Product.Title" class="form-control">
			<span asp-validation-for="Product.Title" class="text-info"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Product.Description">Description</label>
			<textarea rows="3" asp-for="Product.Description" class="form-control"></textarea>
			<span asp-validation-for="Product.Description" class="text-danger"></span>
		</div>
		<div class="row">
		   <div class="mb-3 col-6">
			<label asp-for="Product.ISBN">ISBN</label>
			<input asp-for="Product.ISBN" class="form-control">
			<span asp-validation-for="Product.ISBN" class="text-danger"></span>
		   </div>
		   <div class="mb-3 col-6">
			<label asp-for="Product.Author">Author</label>
			<input asp-for="Product.Author" class="form-control">
			<span asp-validation-for="Product.Author" class="text-danger"></span>
		   </div>
		</div>
		<div class="row">
		   <div class="mb-3 col-6">
			<label asp-for="Product.ListPrice">ListPrice</label>
			<input asp-for="Product.ListPrice" class="form-control">
			<span asp-validation-for="Product.ListPrice" class="text-danger"></span>
		   </div>
		   <div class="mb-3 col-6">
			<label asp-for="Product.Price">Price</label>
			<input asp-for="Product.Price" class="form-control">
			<span asp-validation-for="Product.Price" class="text-danger"></span>
		   </div>
		</div>
		<div class="row">
		   <div class="mb-3 col-6">
			<label asp-for="Product.Price50">Price50</label>
			<input asp-for="Product.Price50" class="form-control">
			<span asp-validation-for="Product.Price50" class="text-danger"></span>
		   </div>
		   <div class="mb-3 col-6">
			<label asp-for="Product.Price100">Price100</label>
			<input asp-for="Product.Price100" class="form-control">
			<span asp-validation-for="Product.Price100" class="text-danger"></span>
		   </div>
		</div>
		<div class="mb-3 ">
			<label asp-for="Product.ImageURL">Image</label>
			<input type="file" class="form-control" id="uploadBox" name="file">
			

		</div>


		<div class="mb-3">
			<label asp-for="Product.CategoryId">Category</label>
			<select asp-for="Product.CategoryId" class="form-select" asp-items="@Model.CategoryList">
				<option disabled selected>--Select Category</option>
			</select>
			<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Product.CoverTypeId">Cover Type</label>
			<select asp-for="Product.CoverTypeId" class="form-select" asp-items="@Model.CoverTypeList">
				<option disabled selected>--Select Cover Type</option>
			</select>
			<span asp-validation-for="Product.CoverTypeId" class="text-danger"></span>
		</div>

		@if(Model.Product.Id != 0)
		{
			<button type="submit" class="btn btn-primary px-5">Update</button>
		}else
		{
			<button type="submit" class="btn btn-primary px-5" onclick="ValidateInput()">Create</button>
		}
		
		
		
		<a  asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List Page</a>
	</div>


</form>

@section Scripts
{
	@{
	<partial name="_ValidationScriptsPartial"/>
	}

	<script>
		function ValidateInput() {

			if (document.getElementById("uploadBox").value=="")
			{
				
				Swal.fire({

					icon: 'error',
					title: 'Oops...',
					text: 'Please upload an image!'				

				})
				return false;
			}
				
			return true;
		}


	</script>
}
