@using KitaplikUygulama.Models
@model Category

<form method="post" asp-action="Delete">
	<input asp-for="ID" hidden/>
	<div class="border p-3 mt-4">
		<div class="row">
			<h2>Delete Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" disabled class="form-control">

		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" disabled class="form-control">
			
		</div>
		<button type="submit" class="btn btn-primary px-5">Delete</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List Page</a>
	</div>
</form>

